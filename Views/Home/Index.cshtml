@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">

        function onLoad() {
            var sec = parseInt(document.location.search.substr(1));

            if (!isNaN(sec))
                mainPlayer.currentTime = sec;
        }

    </script>
    <title>Gospel Videos</title>
</head>
<body>
    <hr />
    <div>

    </div>
    <hr />
    <div style="position:fixed; left:0;top:0;overflow: hidden;">
        <video id="mainPlayer" width="100%" height="100%"
               controls="controls" onloadeddata="onLoad()">
            <source src="/api/media/play?f=Theo Gods Truth-Good News.mp4&p=Theo" />
        </video>
    </div>
</body>
</html>